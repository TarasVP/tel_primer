generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String           @id @default(uuid())
  nick          String           @unique
  email         String           @unique
  name          String           @default("")
  avatar        String?
  password      String
  createdAt     DateTime         @default(now())
  categories    Category[]
  channelsLikes ChannelLike[]
  channels      Channel[]
  permissions   UserPermission[]
}

enum UserPermission {
  BLOCK_CATEGORIES
  ALL
}

model Category {
  id           String    @id @default(uuid())
  name         String    @unique
  serialNumber Int       @unique @default(autoincrement())
  description  String
  text         String
  createdAt    DateTime  @default(now())
  authorId     String
  author       User      @relation(fields: [authorId], references: [id])
  blockedAt    DateTime?
}

model Channel {
  id            String        @id @default(uuid())
  name          String        @unique
  serialNumber  Int           @unique @default(autoincrement())
  description   String
  text          String
  images        String[]
  createdAt     DateTime      @default(now())
  authorId      String
  author        User          @relation(fields: [authorId], references: [id])
  channelsLikes ChannelLike[]
}

model ChannelLike {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  channel   Channel  @relation(fields: [channelId], references: [id])
  channelId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@unique([channelId, userId])
}
