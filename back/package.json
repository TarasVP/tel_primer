{
  "name": "@glimmung/back",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "sentry-release": "dotenv sentry-cli releases new %SOURCE_VERSION% --finalize --org glimmung-og --project 4509538794995712 --auth-token %SENTRY_AUTH_TOKEN%",
    "sentry-sourcemaps": "dotenv -- bash -c 'sentry-cli releases files $SOURCE_VERSION upload-sourcemaps ./dist --org glimmung-og --project node'",
    "sentry": "pnpm sentry-release && pnpm sentry-sourcemaps",
    "start": "node ./dist/back/src/index.js",
    "pmd": "prisma migrate dev",
    "pmr": "prisma migrate reset",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prettify": "prettier --log-level warn --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}'",
    "prepare": "pnpm pgc && ts-patch install -s",
    "build-emails": "rimraf ./src/emails/dist && mkdir .\\src\\emails\\dist && mjml ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/[!_]*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/back",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.30.0",
    "@trpc/server": "^10.45.2",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "cron": "^4.3.0",
    "debug": "^4.4.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "react-router-dom": "^7.3.0",
    "serialize-error": "8.1.0",
    "superjson": "^2.2.2",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@glimmung/front": "workspace:*",
    "@glimmung/shared": "workspace:*",
    "@sentry/cli": "^2.46.0",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "prettier": "3.5.3",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
