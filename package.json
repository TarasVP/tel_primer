{
  "name": "glimmung",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @glimmung/back",
    "f": "pnpm --filter @glimmung/front",
    "dev": "pnpm -r --parallel dev",
    "types": "concurrently \"pnpm b types\" \"pnpm f types\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm f lint\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "ts-patch": "^3.3.0",
    "typescript-transform-paths": "^3.5.5"
  }
}
